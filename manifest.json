{
  "manifest_version": 2,
  "name": "Prohancer : Productivity Enhancer",
  "version": "1.1.0",
  "description": "A productivity management tool for enchancement of one and all",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["1home.css"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "96": "96.png",
      "128": "128.png"
    },
    "default_title": "Prohancer",
    "default_popup": "index.html"
  },
  "options_page": "index.html",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "96": "96.png",
    "128": "128.png"
  },
  "permissions": ["storage", "tabs", "notifications", "alarms"]
}
